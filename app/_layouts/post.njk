{% extends "layouts/post.njk" %}



{% from "screenshots/macro.njk" import appScreenshots %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ appDocumentHeader({
          title: title,
          service: service,
          tag: tag
      }) }}

      <div class="govuk-body">
        <span class="govuk-tag">{{ service }}</span>
        <span class="govuk-tag govuk-tag--purple">{{ epic }}</span>
        {% for item in tag %}
          <span class="govuk-tag govuk-tag--beige govuk-!-margin-top-1">{{ item }}</span>
        {% endfor %}
      </div>

      {{ content }}

      {% for collection in screenshots %}
        {{ appScreenshots(collection) }}
      {% else %}
        {{ appScreenshots(screenshots) if screenshots }}
      {% endfor %}

      {{ appDocumentFooter({
          date: date,
          modified: modified,
          author: author,
          authors: authors,
          image: image
      }) }}
    </div>

    {% if related.items | length > 0 %}
      <div class="govuk-grid-column-one-third">
        <div class="x-govuk-related-navigation">
          <h2 class="govuk-heading-s govuk-!-margin-bottom-2 govuk-!-margin-top-3">{{ related.title }}</h2>
          {% for item in related.items %}
            <p class="govuk-body-s govuk-!-margin-bottom-2"><a href="{{ item.href }}">{{ item.text }}</a></p>
          {% endfor %}
        </div>
        <!-- {{ xGovukRelatedNavigation(related) }} -->
      </div>
    {% endif %}

  </div>
  <p class="app-document-footer__metadata">*Please note all data shown on this Design History is fake data.</p>
{% endblock %}
